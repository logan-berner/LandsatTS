citHeader("To cite LandsatTS in publications use:")

citEntry(
  entry    = "Misc",
  title    = "LandsatTS: an R package to facilitate retrieval, cleaning, cross-calibration, and phenological modeling of Landsat time-series data",
  author   = "Logan T. Berner, Jakob J. Assmann, Signe Normand and Scott J. Goetz",
  year     = 2023,
  url      = "https://github.com/logan-berner/LandsatTS",
  textVersion = paste(
"Logan T. Berner, Jakob J. Assmann, Signe Normand and Scott J. Goetz. 2023. LandsatTS: an R package to facilitate retrieval, cleaning, cross-calibration, and phenological modeling of Landsat time-series data. https://github.com/logan-berner/LandsatTS"
  )
)

citEntry(
  entry    = "Article",
  title    = "Summer Warming Explains Widespread but Not Uniform Greening in the Arctic Tundra Biome",
